{
  "$schema": "https://json.schemastore.org/eslintrc",
  "root": true,
  "extends": [
    "next/core-web-vitals",
    "prettier",
    "plugin:tailwindcss/recommended"
  ],
  "plugins": ["tailwindcss"],
  "ignorePatterns": ["content/**/*.mdx"],
  "rules": {
    "@next/next/no-html-link-for-pages": "off",
    "react/jsx-key": "off",
    "tailwindcss/no-custom-classname": "off",
    "tailwindcss/classnames-order": "error",
    "tailwindcss/enforces-shorthand": "error",
    "tailwindcss/migration-from-tailwind-2": "error",
    "react/no-unescaped-entities": "error",
    "react-hooks/exhaustive-deps": "warn",
    "no-restricted-imports": [
      "error",
      {
        "paths": [
          {
            "name": "@/lib/auth-cookies",
            "message": "Do not import from @/lib/auth-cookies. Use internal API routes (/api/*) instead. Client-side code must NOT read tokens from cookies (XSS exposure)."
          }
        ],
        "patterns": [
          {
            "group": ["**/auth-cookies"],
            "message": "Do not import auth-cookies. Use internal API routes (/api/*) instead."
          }
        ]
      }
    ],
    "no-restricted-syntax": [
      "error",
      {
        "selector": "CallExpression[callee.name='getTokenFromCookies']",
        "message": "getTokenFromCookies() is not allowed. Use internal API routes (/api/*) instead. Client-side code must NOT read tokens from cookies (XSS exposure)."
      },
      {
        "selector": "MemberExpression[object.name='getTokenFromCookies']",
        "message": "getTokenFromCookies is not allowed. Use internal API routes (/api/*) instead."
      }
    ]
  },
  "settings": {
    "tailwindcss": {
      "callees": ["cn"],
      "config": "tailwind.config.ts"
    },
    "next": {
      "rootDir": true
    }
  },
  "overrides": [
    {
      "files": ["*.ts", "*.tsx"],
      "parser": "@typescript-eslint/parser"
    }
  ]
}
